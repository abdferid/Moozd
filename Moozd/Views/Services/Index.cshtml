@model ServicesViewModel
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- banner -->
<div class="mil-dark-bg">
    <div class="mil-inner-banner">
        <div class="mi-invert-fix">
            <div class="mil-banner-content mil-up">
                <div class="mil-animation-frame">
                    <div class="mil-animation mil-position-4 mil-scale" data-value-1="6" data-value-2="1.4"></div>
                </div>
                <div class="container">
                    <ul class="mil-breadcrumbs mil-light mil-mb-60">
                        <li><a asp-action="index" asp-controller="home">Homepage</a></li>
                        <li><a href="">Services</a></li>
                    </ul>
                    <h1 class="mil-muted mil-mb-60">@Html.Raw(Model.ServicesText.MainTitle)</h1>
                    <a href="#services" class="mil-link mil-accent mil-arrow-place mil-down-arrow">
                        <span>Our services</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- banner end -->
    <!-- services -->
    <section id="services">
        <div class="mi-invert-fix">
            <div class="container mil-p-120-60">
                <div class="row">
                    <div class="col-lg-5">

                        <div class="mil-lines-place mil-light"></div>

                    </div>
                    <div class="col-lg-7">
                        <div class="row">
                            @foreach (var service in Model.Services)
                            {
                                <div class="col-md-6 col-lg-6">
                                    <a asp-action="SingleService" asp-controller="Services" asp-route-id="@service.ID" class="mil-service-card-lg mil-more mil-accent-cursor mil-offset">
                                        <h4 class="mil-muted mil-up mil-mb-30">@service.Title</h4>
                                        <p class="mil-descr mil-light-soft mil-up mil-mb-30">@service.Description</p>
                                        <ul class="mil-service-list mil-light mil-mb-30">
                                            
                                            @foreach(var step in service.Steps)
                                            {
                                                <li class="mil-up">@step.Title</li>
                                            }
                                        </ul>
                                        <div asp-action="SingleService" asp-controller="Services" asp-route-id="@service.ID" class="mil-link mil-accent mil-arrow-place mil-up">
                                            <span>Read more</span>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- services end -->
<!-- call to action -->
<section class="mil-soft-bg">
    <div class="container mil-p-120-120">
        <div class="row">
            <div class="col-lg-10">

                <span class="mil-suptitle mil-suptitle-right mil-suptitle-dark mil-up">@Html.Raw(Model.ServicesText.LittleText)</span>

            </div>
        </div>
        <div class="mil-center">
            <h2 class="mil-up mil-mb-60">@Html.Raw(Model.ServicesText.Title)</h2>
            <div class="mil-up"><a href="contact.html" class="mil-button mil-arrow-place"><span>Contact us</span></a></div>
        </div>
    </div>
</section>
<!-- call to action end -->
