@model SingleServiceViewModel

@{
    ViewData["Title"] = "Single Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- banner -->
<div class="mil-inner-banner">
    <div class="mil-animation-frame">
        <div class="mil-animation mil-position-4 mil-dark mil-scale" data-value-1="6" data-value-2="1.4"></div>
    </div>
    <div class="mil-banner-content mil-up">
        <div class="container">
            <ul class="mil-breadcrumbs mil-mb-60">
                <li><a asp-action="Index" asp-controller="Home">Homepage</a></li>
                <li><a asp-action="Index" asp-controller="Services">Services</a></li>
                <li><a href="service.html">Service</a></li>
            </ul>
            <h1 class="mil-mb-60">@Html.Raw(Model.Service.Title)</h1>
            <a href="#service" class="mil-link mil-dark mil-arrow-place mil-down-arrow">
                <span>About service</span>
            </a>
        </div>
    </div>
</div>
<!-- banner end -->
<!-- service -->
<section id="service">
    <div class="container mil-p-120-90">
        <div class="row justify-content-between">
            <div class="col-lg-4 mil-relative mil-mb-90">

                <h4 class="mil-up mil-mb-30">Your <span class="mil-thin">Approach</span> <br>and <span class="mil-thin">Work Specifics</span></h4>
                <p class="mil-up mil-mb-30">@Model.Service.Description</p>
                <div class="mil-up">
                    <a href="" class="mil-link mil-dark mil-arrow-place">
                        <span>View works</span>
                    </a>
                </div>

            </div>
            <div class="col-lg-6">

                @foreach (var step in Model.Service.Steps)
                {
                    <div class="mil-accordion-group mil-up">
                        <div class="mil-accordion-menu">

                            <p class="mil-accordion-head">@step.Title</p>

                            <div class="mil-symbol mil-h3">
                                <div class="mil-plus">+</div>
                                <div class="mil-minus">-</div>
                            </div>

                        </div>
                        <div class="mil-accordion-content">
                            @Html.Raw(step.Description)
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- service end -->

<!-- other services -->
<section>
    <div class="container mil-p-120-90">
        <div class="row align-items-center mil-mb-30">
            <div class="col-lg-6 mil-mb-30">
                <h3 class="mil-up">Other services</h3>
            </div>
            <div class="col-lg-6 mil-mb-30">
                <div class="mil-adaptive-right mil-up">
                    <a asp-action="Index" asp-controller="Services" class="mil-link mil-dark mil-arrow-place">
                        <span>View all</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var service in Model.Top3Services)
            {
                <div class="col-lg-4">

                    <a asp-action="SingleService" asp-controller="Services" asp-route-id="@service.ID" class="mil-service-card-lg mil-other-card mil-more mil-mb-30">
                        <h4 class="mil-up mil-mb-30">@service.Title</h4>
                        <p class="mil-descr mil-up mil-mb-30">@service.Description</p>
                        <ul class="mil-service-list mil-dark mil-mb-30">
                            @foreach(var step in service.Steps)
                            {
                                <li class="mil-up">@step.Title</li>
                            }
                        </ul>
                        <div asp-action="SingleService" asp-controller="Services" asp-route-id="@service.ID" class="mil-link mil-dark mil-arrow-place mil-up">
                            <span>Read more</span>
                        </div>
                            
                    </a>

                </div>
            }
            
        </div>
    </div>
</section>
<!-- other services end -->
